<%= form_with model: @user do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: "Your username here" %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "example@example.com" %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

